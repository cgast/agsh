{
  "description": "Minimal pipeline: list files, read one, write output",
  "steps": [
    {
      "command": "fs:list",
      "args": ["./workspace"],
      "intent": "List files in workspace directory"
    },
    {
      "command": "fs:read",
      "args": ["./workspace/input.txt"],
      "intent": "Read the input file"
    },
    {
      "command": "fs:write",
      "args": {
        "path": "./output.txt",
        "content": "Hello from agsh pipeline!"
      },
      "intent": "Write a greeting to the output file",
      "verify": [
        {"type": "not_empty", "target": "output"}
      ]
    }
  ]
}
